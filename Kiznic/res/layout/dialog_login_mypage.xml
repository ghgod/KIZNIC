<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dip"
    android:layout_height="200dip"
    android:gravity="center"
    android:background="#00000000"
    android:orientation="vertical" >
    
    	<RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:layout_marginBottom="10dip">
        
    	    <Button
    	        android:id="@+id/login_dialog_exit_button"
    	        android:layout_width="20dip"
    	        android:layout_height="20dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
    	        android:background="@drawable/weather_rainfall_image"/>
    	    
    	    <TextView 
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_toLeftOf="@id/login_dialog_exit_button"
    	        android:layout_centerVertical="true"
    	        android:layout_marginRight="5dip"
    	        android:text="로그인"
    	        android:textColor="#FFFFFF"
    	        android:textSize="12sp"/>
    	    
	    </RelativeLayout>
	    
        <LinearLayout
            android:id="@+id/mypage_login_1_view"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:layout_marginBottom="10dip"
	        android:gravity="center"
	        android:background="#ACACAC">
        
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="kakaoTalk으로 로그인"
                android:textColor="#000000"
                android:textSize="20sp"/>
            
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/mypage_login_2_view"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:layout_marginBottom="10dip"
	        android:background="#ACACAC">
        
	        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Facebook으로 로그인"
                android:textColor="#000000"
                android:textSize="20sp"/>
            
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/mypage_login_3_view"
	        android:layout_width="match_parent"
	        android:layout_height="0dip"
	        android:layout_weight="1"
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:background="#ACACAC">
        
	        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Naver로 로그인"
                android:textColor="#000000"
                android:textSize="20sp"/>
            
	    </LinearLayout>
	    
</LinearLayout>
