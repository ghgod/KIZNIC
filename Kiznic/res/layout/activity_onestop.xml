<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F2F3" >
	
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <FrameLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="5dp" >
		
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="vertical" >
		
		            <TextView
		                android:id="@+id/textView4"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="#24B0CD"
		                android:textSize="25sp"
		                android:text="안전 신속 신고" />
		
		        </LinearLayout>
	
	    	</FrameLayout>
	    
		    <ImageView
		        android:id="@+id/weather_null"
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:background="#76C4C1" />
		    
	    	<TextView
	               
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="10dp"
	                android:layout_marginBottom="10dp"
	                android:layout_marginLeft = "5dp"
	                android:layout_marginRight = "5dp"
	                android:padding="5dp"
	                android:gravity="center"
	                android:background="#ffffff"
	                android:textColor="#000000"
	                android:textSize="15sp"
	                android:text="나들이의 안전 문제나 불편한 점을 간편히 이메일로 보낼 수 있습니다.아래의 기관으로 빠르고 쉽게 접수하세요!" />
	    
	    
		    <Button
		        android:id="@+id/onestop_ciss"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity = "center"
		        android:layout_marginBottom="5dp"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:background="#5076C4C1"
		        android:textColor="#000000"
		        android:text="어린이 안전넷" />
	
		    <Button
		        android:id="@+id/onestop_sobijawon"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:layout_gravity = "center"
		        android:background="#5076C4C1"
		        android:textColor="#000000"
		        android:text="한국 소비자원" />
            
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/onestop_tutorial_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/onestop_tutorial_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
            
        </LinearLayout>
        
    </FrameLayout>
    
</LinearLayout>
