<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:descendantFocusability="beforeDescendants"
	android:orientation="vertical">
	 
    <LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="200dip"
		android:layout_marginTop="5dip"
		android:layout_marginRight="5dip"
		android:layout_marginLeft="5dip"
		android:background="#DEE7E7"
		android:descendantFocusability="afterDescendants">
		
		 <!-- location -->
		 
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="0dip"
		     android:layout_weight="4"
		     android:orientation="horizontal">
		     
		     <TextView
		             android:id="@+id/weather_location_text"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_gravity="center"
		             android:layout_marginLeft="10dip"
		             android:text="경기도 성남시 분당구 정자일로"
		             android:textColor="#000000"
		             android:textSize="17sp"/>
		         
		         <ImageView
		             android:id="@+id/weather_getlocation_imagebutton"
		             android:layout_width="20dip"
		             android:layout_height="20dip"
		             android:layout_gravity="center"
		             android:src="@drawable/weather_gps"/>
		     
		 </LinearLayout>
		 
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="0dip"
		     android:layout_weight="3"
		     android:orientation="horizontal">
		         
		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="28"
		         android:layout_marginRight="1dip"
		         android:background="#30FFFFFF"
		         android:orientation="horizontal">
		             
		         <TextView
		             android:id="@+id/weather_simpleinfo_text"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_gravity="center"
		             android:layout_marginLeft="10dip"
		             android:text="9시, 비"
		             android:textColor="#000000"
		             android:textSize="13sp"/>
		         
		     </LinearLayout>

		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="15"
		         android:layout_marginLeft="1dip"
		         android:background="#30FFFFFF"
		         android:orientation="horizontal">
		             
		         <TextView
		             android:id="@+id/weather_nextdaysimpleinfo_text"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
		             android:layout_gravity="center"
		             android:layout_marginLeft="5dip"
		             android:text="13시, 맑음"
		             android:textColor="#000000"
		             android:textSize="13sp"/>
		         
		     </LinearLayout>
		     
		 </LinearLayout>
		 
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="0dip"
		     android:layout_weight="18"
		     android:orientation="horizontal">
		     
		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="28"
		         android:orientation="vertical">
		         
		         <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="0dip"
		             android:layout_weight="9"
		             android:orientation="horizontal">
		             
		             	<LinearLayout
		             	    android:layout_width="0dip"
		             	    android:layout_height="match_parent"
		             	    android:layout_weight="10">
		             	    
		             	    <ImageView
		                     android:id="@+id/weather_weatherimage_image"
		                     android:layout_width="match_parent"
		                     android:layout_height="match_parent"
		                     android:layout_marginLeft="10dip"
		                     android:layout_gravity="center"
		                     android:src="@drawable/weather_image"/>
		             	    
		             	</LinearLayout>

		             	<LinearLayout
		             	    android:layout_width="0dip"
		             	    android:layout_height="match_parent"
		             	    android:layout_weight="17"
		             	    android:orientation="vertical" >
		             	    
		             	    <RelativeLayout
		             	        android:layout_width="match_parent"
		             	        android:layout_height="0dip"
		             	        android:layout_weight="13">
		             	        
		             	        <TextView
				                    android:id="@+id/weather_temperature_text"
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
									android:layout_centerInParent="true"
				                    android:text="18.5°"
				                    android:textColor="#000000"
				                    android:textSize="40sp"/>
		             	        
		             	    </RelativeLayout>
		             	    
		             	    <LinearLayout
		             	        android:layout_width="match_parent"
		             	        android:layout_height="0dip"
		             	        android:layout_weight="5"
		             	        android:orientation="horizontal">
		             	        
		             	        <RelativeLayout
		             	            android:layout_width="match_parent"
		             	            android:layout_height="match_parent">
		             	            
		             	            <TextView
					                    android:id="@+id/weather_windcilltemperature_text"
					                    android:layout_width="wrap_content"
					                    android:layout_height="wrap_content"
					                    android:layout_centerInParent="true"
					                    android:text="체감온도 -9.3°"
					                    android:textColor="#000000"
					                    android:textSize="10sp"/>
		             	            
		             	        </RelativeLayout>
		             	        
		             	    </LinearLayout>
		             	    
		             	</LinearLayout>
		             
		         </LinearLayout>
		         
		         <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="0dip"
		             android:layout_weight="8"
		             android:orientation="horizontal">
		             
		             <LinearLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="10"
		                 android:orientation="vertical">
		             	    
		                 <RelativeLayout
		                     android:layout_width="match_parent"
		                     android:layout_height="0dip"
		                     android:layout_weight="1">
		                     
		                     <ImageView
					             android:id="@+id/weather_rainfall_image"
						         android:layout_width="15dip"
						         android:layout_height="15dip"
						         android:layout_centerVertical="true"
						         android:layout_marginLeft="20dip"
						         android:src="@drawable/rainfall"/>
					         
					     	 <TextView
					     	     android:id="@+id/weather_rainfallpercent_text"
						         android:layout_width="wrap_content"
						         android:layout_height="wrap_content"
						         android:layout_gravity="center"
						         android:layout_centerVertical="true"
						         android:layout_toRightOf="@id/weather_rainfall_image"
						         android:text="100%"
						         android:textColor="#000000"
						         android:textSize="10sp"/>
		                     
		                 </RelativeLayout>
		                 
		                 <RelativeLayout
		                     android:layout_width="match_parent"
		                     android:layout_height="0dip"
		                     android:layout_weight="1">
					     	 
		                     <ImageView
				     	         android:id="@+id/weather_windspeed_image"
					             android:layout_width="15dip"
					             android:layout_height="15dip"
						         android:layout_centerVertical="true"
						         android:layout_marginLeft="20dip"
					             android:src="@drawable/windspeed"/>
				         
				     	     <TextView
				     	         android:id="@+id/weather_windspeedpercent_text"
					             android:layout_width="wrap_content"
					             android:layout_height="wrap_content"
						         android:layout_centerVertical="true"
						         android:layout_toRightOf="@id/weather_windspeed_image"
					             android:text="100%"
					             android:textColor="#000000"
					             android:textSize="10sp"/>
		                     
		                 </RelativeLayout>
		                 
		                 <RelativeLayout
		                     android:layout_width="match_parent"
		                     android:layout_height="0dip"
		                     android:layout_weight="1">
				     	     
		                     <TextView
				     	         android:id="@+id/weather_weatherwatch_text"
					             android:layout_width="wrap_content"
					             android:layout_height="wrap_content"
					             android:layout_centerInParent="true"
					             android:text="XX주의보"
					             android:textColor="#000000"
					             android:textSize="10sp"/> 
		                     
		                 </RelativeLayout>
		                 
		             </LinearLayout>

		             <RelativeLayout
		             	 android:layout_width="0dip"
		              	 android:layout_height="match_parent"
		             	 android:layout_weight="17"
		                 android:orientation="vertical" >
		                 
		                 <ImageView
		                     android:id="@+id/weather_finedustimage_image"
		                     android:layout_width="40dip"
		                     android:layout_height="40dip"
		                     android:layout_centerHorizontal="true"
		                     android:layout_marginTop="5dip"
		                     android:src="@drawable/finedust"/>
		                 
		                 <TextView
		                     android:id="@+id/weather_finedusttext_text"
		                     android:layout_width="wrap_content"
		                     android:layout_height="wrap_content"
		                     android:layout_marginTop="5dip"
							 android:layout_centerHorizontal="true"
							 android:layout_below="@id/weather_finedustimage_image"
		                     android:text="미세먼지 농도 50"
		                     android:textColor="#000000"
		                     android:textSize="10sp"/>
		                 
		             </RelativeLayout>
		             
		         </LinearLayout>
		         
		     </LinearLayout>

		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="15"
		         android:orientation="vertical">
		             
		         <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="0dip"
		             android:layout_weight="87"
		             android:orientation="horizontal">
		             
		             <LinearLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="70">
		                 
		                 <ImageView
		                     android:id="@+id/weather_nextweatherimage_image"
		                     android:layout_width="match_parent"
		                     android:layout_height="match_parent"
		                     android:layout_gravity="center"
		                     android:src="@drawable/weather_image"/>
		                 
		             </LinearLayout>
		             
		             <RelativeLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="83">
		                 
		                 <TextView
		                     android:id="@+id/weather_nexttemperature_text"
		                     android:layout_width="wrap_content"
		                     android:layout_height="wrap_content"
							 android:layout_centerInParent="true"
		                     android:text="18.3°"
		                     android:textColor="#000000"
		                     android:textSize="20sp"/>
		                 
		             </RelativeLayout>
		             
		         </LinearLayout>
		         
		         <RelativeLayout
		             android:layout_width="match_parent"
		             android:layout_height="0dip"
		             android:layout_weight="93">
		             
		             <ImageView
		                 android:id="@+id/weather_nextfinedustimage_image"
		                 android:layout_width="40dip"
		                 android:layout_height="40dip"
		                 android:layout_centerHorizontal="true"
		                 android:layout_marginTop="13dip"
		                 android:src="@drawable/finedust"/>
		                 
		             <TextView
		                 android:id="@+id/weather_nextfinedusttext_text"
		                 android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"
		                 android:layout_marginTop="5dip"
						 android:layout_centerHorizontal="true"
						 android:layout_below="@id/weather_nextfinedustimage_image"
		                 android:text="미세먼지 농도 50"
		                 android:textColor="#000000"
		                 android:textSize="10sp"/>
		             
		         </RelativeLayout>
		         
		     </LinearLayout>
		     
		 </LinearLayout>
		 
	 </LinearLayout>
	 
</LinearLayout>
