<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:descendantFocusability="beforeDescendants"
	android:orientation="vertical">
	 
    <LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="200dip"
		android:layout_marginTop="10dip"
		android:layout_marginRight="10dip"
		android:layout_marginLeft="10dip"
		android:background="#FFFFFF"
		android:descendantFocusability="afterDescendants">
		
		 <!-- location -->
		 
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="0dip"
		     android:layout_weight="45"
		     android:orientation="horizontal"
		     android:background="@drawable/detail_underline_background">
		     
		     <TextView
		             android:id="@+id/weather_location_text"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_gravity="center"
		             android:layout_marginLeft="10dip"
		             android:text="경기도 성남시 분당구 정자일로"
		             android:textColor="#000000"
		             android:textSize="17sp"/>
		         
		         <ImageView
		             android:id="@+id/weather_getlocation_imagebutton"
		             android:layout_width="15dip"
		             android:layout_height="15dip"
		             android:layout_marginLeft="5dip"
		             android:layout_gravity="center"/>
		     
		 </LinearLayout>
		 
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="0dip"
		     android:layout_weight="35"
		     android:orientation="horizontal">
		         
		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="28"
		         android:layout_marginRight="1dip"
		         android:background="#50FFFFFF"
		         android:orientation="horizontal">
		             
		         <TextView
		             android:id="@+id/weather_simpleinfo_text"
		             android:layout_width="wrap_content"
		             android:layout_height="wrap_content"
		             android:layout_gravity="center"
		             android:layout_marginLeft="10dip"
		             android:text="9시, 비"
		             android:textColor="#000000"
		             android:textSize="13sp"/>
		         
		     </LinearLayout>

		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="15"
		         android:layout_marginLeft="1dip"
		         android:background="#50FFFFFF"
		         android:orientation="horizontal">
		             
		         <TextView
		             android:id="@+id/weather_nextdaysimpleinfo_text"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
		             android:layout_gravity="center"
		             android:layout_marginLeft="5dip"
		             android:text="13시, 맑음"
		             android:textColor="#000000"
		             android:textSize="13sp"/>
		         
		     </LinearLayout>
		     
		 </LinearLayout>
		 
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="0dip"
		     android:layout_weight="130"
		     android:background="@drawable/detail_underline_background"
		     android:orientation="horizontal">
		     
		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="28"
		         android:layout_marginRight="1dip"
		         android:orientation="vertical">
		         
		         <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="0dip"
		             android:layout_weight="9"
		             android:orientation="horizontal">
		             
		             	<LinearLayout
		             	    android:layout_width="0dip"
		             	    android:layout_height="match_parent"
		             	    android:layout_weight="145"
		             	    android:gravity="center">
		             	    
		             	    <ImageView
			                     android:id="@+id/weather_weatherimage_image"
			                     android:layout_width="match_parent"
			                     android:layout_height="match_parent"
			                     android:layout_gravity="center"
			                     android:padding="5dip"/>
		             	    
		             	</LinearLayout>

		             	<LinearLayout
		             	    android:layout_width="0dip"
		             	    android:layout_height="match_parent"
		             	    android:layout_weight="180"
		             	    android:gravity="center"
		             	    android:orientation="vertical" >
		             	    
		             	    <TextView
				                android:id="@+id/weather_temperature_text"
				                android:layout_width="wrap_content"
				                android:layout_height="wrap_content"
				                android:layout_gravity="center"
	 		                    android:text="18.5°"
	 		                    android:textColor="#000000"
			                    android:textSize="30sp"/>
		            	    
		                    <TextView
		             	        android:id="@+id/weather_windcilltemperature_text"
		                        android:layout_width="wrap_content"
		      	                android:layout_height="wrap_content"
								android:layout_gravity="center"
		             	        android:text="체감온도 -9.3°"
		             	        android:textColor="#FFFFFF"
		             	        android:textSize="15sp" />
		             	    
		             	</LinearLayout>
		             
		         </LinearLayout>
		      
		     </LinearLayout>

		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="15"
		         android:layout_marginLeft="1dip"
		         android:orientation="horizontal">
		             
		             <LinearLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="70">
		                 
		                 <ImageView
		                     android:id="@+id/weather_nextweatherimage_image"
		                     android:layout_width="match_parent"
		                     android:layout_height="match_parent"
		                     android:layout_gravity="center"/>
		                 
		             </LinearLayout>
		             
		             <RelativeLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="83">
		                 
		                 <TextView
		                     android:id="@+id/weather_nexttemperature_text"
		                     android:layout_width="wrap_content"
		                     android:layout_height="wrap_content"
							 android:layout_centerInParent="true"
		                     android:text="18.3°"
		                     android:textColor="#000000"
		                     android:textSize="15sp"/>
		                 
		             </RelativeLayout>
		             
		     </LinearLayout>
		     
		 </LinearLayout>
		 
		 <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="0dip"
		     android:layout_weight="45"
		     android:layout_marginTop="1dip"
		     android:orientation="horizontal">
		     
		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="28"
		         android:orientation="horizontal">
		         
		         <LinearLayout
		             android:layout_width="0dip"
		             android:layout_height="match_parent"
		             android:layout_weight="1"
		             android:gravity="center"
		             android:orientation="horizontal">
		             
		             <LinearLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="1">
		             	
		                 <ImageView
					     android:id="@+id/weather_rainfall_image"
				         android:layout_width="match_parent"
					     android:layout_height="match_parent"
				         android:layout_gravity="center_vertical"/>
					 
		             </LinearLayout>
		             
		             <LinearLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="1">
		                 
		                 <TextView
			     	     android:id="@+id/weather_rainfallpercent_text"
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_gravity="center_vertical"
				         android:layout_marginLeft="3dip"
				         android:text="100%"
				         android:textColor="#000000"
				         android:textSize="12sp"/>
				
		             </LinearLayout>
		         	 	     	 
		         </LinearLayout>
		         
		         <LinearLayout
		             android:layout_width="0dip"
		             android:layout_height="match_parent"
		             android:layout_weight="1"
		             android:gravity="center"
		             android:orientation="horizontal">
		             
		             <LinearLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="1">
		             
		                 <ImageView
				         android:layout_width="match_parent"
					     android:layout_height="match_parent"
				         android:layout_gravity="center_vertical"/>
					 
		             </LinearLayout>
		             
		             <LinearLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="1">
		                 
		                 <TextView
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_gravity="center_vertical"
				         android:layout_marginLeft="3dip"
				         android:text="45%"
				         android:textColor="#000000"
				         android:textSize="12sp"/>
		         
		             </LinearLayout>
		                     
			     	     
		         </LinearLayout>
		         
		         <LinearLayout
		             android:layout_width="0dip"
		             android:layout_height="match_parent"
		             android:layout_weight="1"
		             android:gravity="center"
		             android:orientation="horizontal">
		             
		             <LinearLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="1">
		                 
		                 <ImageView
		                 android:id="@+id/weather_windspeed_image"
				         android:layout_width="match_parent"
					     android:layout_height="match_parent"
				         android:layout_gravity="center_vertical"/>
					 
		             </LinearLayout>
		                 
		             <LinearLayout
		                 android:layout_width="0dip"
		                 android:layout_height="match_parent"
		                 android:layout_weight="1">
		                 
		                 <TextView
			     	     android:id="@+id/weather_windspeedpercent_text"
				         android:layout_width="wrap_content"
				         android:layout_height="wrap_content"
				         android:layout_gravity="center_vertical"
				         android:layout_marginLeft="3dip"
				         android:text="4m/s"
				         android:textColor="#000000"
				         android:textSize="12sp"/>
			 
		             </LinearLayout>
		                     
			     	     	 
		         </LinearLayout>
		         
		     </LinearLayout>
		     
		     <LinearLayout
		         android:layout_width="0dip"
		         android:layout_height="match_parent"
		         android:layout_weight="15"
		         android:gravity="center"
		         android:orientation="horizontal">
		         
		         <ImageView
		             android:id="@+id/weather_finedustimage_image"
			         android:layout_width="20dip"
			         android:layout_height="20dip"
			         android:layout_gravity="center_vertical"/>
		                     
		         <TextView
			         android:id="@+id/weather_finedusttext_text"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
					 android:layout_gravity="center_vertical"
					 android:layout_marginLeft="3dip"
			         android:text="미세먼지 농도 50"
			         android:textColor="#000000"
			         android:textSize="10sp"/>
		                     
		     </LinearLayout>
		     
		     <!-- 
		     <RelativeLayout
		                     android:layout_width="match_parent"
		                     android:layout_height="0dip"
		                     android:layout_weight="1">
		                     
		                     
		                     
		                 </RelativeLayout>
		                 
		                 <RelativeLayout
		                     android:layout_width="match_parent"
		                     android:layout_height="0dip"
		                     android:layout_weight="1">
					     	 
		                     <ImageView
				     	         android:id="@+id/weather_windspeed_image"
					             android:layout_width="15dip"
					             android:layout_height="15dip"
						         android:layout_centerVertical="true"
						         android:layout_marginLeft="20dip"
					             android:src="@drawable/windspeed"/>
				         
				     	     <TextView
				     	         
