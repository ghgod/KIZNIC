 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F2F2" >
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="100dip"
		android:background="#FDF9F2"
		android:layout_marginTop="5dip"
		android:layout_marginRight="5dip"
		android:layout_marginLeft="5dip"
        android:orientation="horizontal">
    
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="14">
            
            <ImageView 
                android:id="@+id/profile_kidimage_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="5dip"/>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="37"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1">
                
                <TextView 
	                android:id="@+id/profile_kidname_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="닉네이이임의 상태입력"
	               	android:textColor="#000000"
	               	android:textSize="14sp"/>
	                
            </LinearLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="4"
                android:layout_marginRight="5dip"
                android:layout_marginBottom="5dip"
                android:background="@drawable/condition_background">
                
                <TextView
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나들이 이동 반경"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_marginRight="5dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"/>
                      
                    <SeekBar android:id="@+id/condition_range_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:max="4"
                        android:progress="0"
                        android:secondaryProgress="0"
                        android:progressDrawable="@drawable/condition_seekbar"
                        android:thumbOffset="5dip"/> 
                
            </RelativeLayout>
            
        </LinearLayout>
        
        
    </LinearLayout>
    
    <!-- 카드 리스트  -->
    <ListView
		android:id="@+id/main_list_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:headerDividersEnabled="true"
		android:footerDividersEnabled="true"
		android:listSelector="@android:color/transparent"
		android:cacheColorHint="@android:color/transparent"
		android:divider="@null"
		android:scrollbars="none" />
</LinearLayout>