 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F2F2" >
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="100dip"
		android:background="#FDF9F2"
		android:layout_marginTop="5dip"
		android:layout_marginRight="5dip"
		android:layout_marginLeft="5dip"
        android:orientation="vertical">
    
        <LinearLayout 

            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/profile_kidname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네이이임의 상태입력"
               	android:textColor="#000000"
               	android:textSize="14sp"/>
            
        </LinearLayout>
        
        <LinearLayout 

            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:orientation="horizontal">
            
            <!-- profile image -->
            
            <LinearLayout
                
                android:id="@+id/profile"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dip">
                
                <ImageView 
                    
                android:id="@+id/profile_kidimage_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"/>
                
            </LinearLayout>
            
            <!-- condition -->
            
            <LinearLayout
                
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="5dip"
                android:background="@drawable/condition_background"
                android:orientation="horizontal">
                
                <RelativeLayout
                    
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="21">
                    
                    <ToggleButton
                        
                        android:id="@+id/condition_inout_image"
				        android:layout_width="50dip"
				        android:layout_height="20dip"
				        android:background="@drawable/condition_inout_toggle"
				        android:textOn=" "
				        android:textOff=" "
						android:layout_centerInParent="true"/>
                    
                    <TextView
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="실내/실외"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                    
                </RelativeLayout>
                    
                <RelativeLayout
                    
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="51">
                    
                    <ImageView
                        
                        android:id="@+id/condition_range_image"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_centerInParent="true"
                        android:src="@drawable/condition_bar"/>
                    
                    <TextView
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이동 반경"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:layout_marginRight="5dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>
                    
                </RelativeLayout>
                
            </LinearLayout>
            
        </LinearLayout>
        
        
    </LinearLayout>
    
    <!-- 카드 리스트  -->
    <ListView
		android:id="@+id/main_list_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:headerDividersEnabled="true"
		android:footerDividersEnabled="true"
		android:listSelector="@android:color/transparent"
		android:cacheColorHint="@android:color/transparent"
		android:divider="@null" />
</LinearLayout>